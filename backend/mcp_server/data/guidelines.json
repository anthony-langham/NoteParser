{
  "pediatric_croup_management": {
    "name": "Pediatric Croup Management Protocol",
    "version": "1.0",
    "last_updated": "2024-07-14",
    "source": "Based on NICE Guidelines, AAP Guidelines, and clinical best practice",
    "conditions": ["croup"],
    "decision_tree": {
      "initial_assessment": {
        "history": [
          "Duration and onset of symptoms",
          "Previous episodes of croup",
          "Fever pattern and height",
          "Feeding and fluid intake",
          "Vaccination status",
          "Recent upper respiratory illness"
        ],
        "physical_examination": [
          "Respiratory rate and effort",
          "Presence and quality of stridor",
          "Chest wall retractions",
          "Air entry on auscultation",
          "Oxygen saturation",
          "Level of consciousness and agitation",
          "Signs of dehydration"
        ],
        "severity_assessment": {
          "mild": {
            "management": "supportive_care",
            "disposition": "home",
            "follow_up": "routine"
          },
          "moderate": {
            "management": "corticosteroids",
            "disposition": "observe_then_home",
            "follow_up": "24-48_hours"
          },
          "severe": {
            "management": "corticosteroids_plus_nebulized_adrenaline",
            "disposition": "admit_or_extended_observation",
            "follow_up": "inpatient"
          }
        }
      },
      "treatment_algorithm": {
        "mild": {
          "immediate_actions": [
            "Reassure child and parents",
            "Avoid procedures that may agitate child",
            "Cool mist or humidified air",
            "Adequate hydration"
          ],
          "medications": "none_required",
          "monitoring": "symptom_progression",
          "discharge_criteria": "stable_symptoms",
          "safety_netting": "return_if_worsening"
        },
        "moderate": {
          "immediate_actions": [
            "Minimize distress and agitation",
            "Position child comfortably (usually upright)",
            "Continuous monitoring"
          ],
          "medications": {
            "first_choice": "dexamethasone_0.15mg_per_kg_oral",
            "alternative": "prednisolone_1mg_per_kg_oral"
          },
          "monitoring": {
            "duration": "2-4_hours_post_steroid",
            "parameters": [
              "respiratory_rate",
              "stridor_intensity",
              "chest_retractions",
              "oxygen_saturation",
              "level_of_consciousness"
            ]
          },
          "discharge_criteria": [
            "improved_stridor",
            "reduced_retractions",
            "stable_oxygen_saturation",
            "child_comfortable_and_feeding"
          ],
          "safety_netting": "detailed_advice_sheet"
        },
        "severe": {
          "immediate_actions": [
            "Call for senior help",
            "Prepare for potential airway intervention",
            "High-flow oxygen if indicated",
            "Avoid agitation at all costs"
          ],
          "medications": {
            "steroids": "dexamethasone_0.15mg_per_kg_oral_or_iv",
            "nebulized_treatment": "adrenaline_5ml_1:1000_nebulized"
          },
          "monitoring": {
            "location": "high_dependency_area",
            "frequency": "continuous",
            "parameters": [
              "respiratory_rate",
              "oxygen_saturation",
              "blood_pressure",
              "heart_rate",
              "level_of_consciousness"
            ]
          },
          "admission_criteria": [
            "persistent_severe_symptoms",
            "recurrent_need_for_nebulized_adrenaline",
            "social_concerns",
            "distance_from_hospital"
          ]
        }
      }
    },
    "monitoring": {
      "post_treatment": {
        "steroid_response": "assess_at_2_hours",
        "adrenaline_response": "assess_at_1_hour",
        "rebound_symptoms": "monitor_for_4_hours_post_adrenaline"
      },
      "deterioration_signs": [
        "increasing_stridor",
        "worsening_retractions",
        "decreasing_oxygen_saturation",
        "altered_consciousness",
        "cyanosis"
      ]
    },
    "follow_up": {
      "mild_cases": "routine follow up with GP",
      "moderate_cases": "review_24_48_hours",
      "severe_cases": "inpatient_monitoring",
      "parent_education": [
        "recognition_of_deterioration",
        "when_to_seek_immediate_help",
        "supportive_care_at_home",
        "expected_duration_of_illness"
      ]
    },
    "special_considerations": {
      "recurrent_croup": {
        "definition": "3_or_more_episodes",
        "investigations": "consider_anatomical_abnormalities",
        "referral": "ent_or_respiratory_paediatrics"
      },
      "atypical_presentation": {
        "high_fever_with_toxicity": "consider_bacterial_tracheitis",
        "drooling_and_difficulty_swallowing": "consider_epiglottitis",
        "unilateral_symptoms": "consider_foreign_body"
      },
      "comorbidities": {
        "premature_infants": "lower_threshold_for_admission",
        "chronic_lung_disease": "may_require_prolonged_monitoring",
        "immunocompromised": "consider_atypical_pathogens"
      }
    },
    "contraindications_and_precautions": {
      "avoid_examination_if": [
        "severe_respiratory_distress",
        "suspected_epiglottitis",
        "child_extremely_agitated"
      ],
      "steroid_contraindications": [
        "active_bacterial_infection",
        "immunocompromised_state",
        "known_hypersensitivity"
      ],
      "adrenaline_contraindications": [
        "severe_cardiac_disease",
        "severe_hypertension"
      ]
    }
  },
  "adult_acute_asthma_management": {
    "name": "Adult Acute Asthma Management Protocol",
    "version": "1.0",
    "last_updated": "2024-07-15",
    "source": "Based on BTS/SIGN Guidelines, GINA Guidelines, and clinical best practice",
    "conditions": ["acute_asthma"],
    "decision_tree": {
      "initial_assessment": {
        "history": [
          "Duration and onset of symptoms",
          "Known triggers or precipitants",
          "Current asthma medications and compliance",
          "Previous hospital admissions or ICU stays",
          "Recent changes in medication",
          "Peak flow if available"
        ],
        "physical_examination": [
          "Respiratory rate and accessory muscle use",
          "Ability to complete sentences",
          "Wheeze intensity and air entry",
          "Heart rate and blood pressure",
          "Oxygen saturation",
          "Level of consciousness",
          "Peak expiratory flow rate"
        ],
        "severity_assessment": {
          "mild": {
            "management": "bronchodilators_and_steroids",
            "disposition": "home_with_follow_up",
            "follow_up": "24-48_hours"
          },
          "moderate": {
            "management": "intensive_bronchodilators_and_steroids",
            "disposition": "observe_then_reassess",
            "follow_up": "specialist_referral"
          },
          "severe": {
            "management": "maximum_therapy_consider_iv",
            "disposition": "admit_consider_icu",
            "follow_up": "inpatient_management"
          },
          "life_threatening": {
            "management": "immediate_intensive_care",
            "disposition": "icu_admission",
            "follow_up": "critical_care"
          }
        }
      },
      "treatment_algorithm": {
        "mild": {
          "immediate_actions": [
            "Oxygen to maintain SpO2 94-98%",
            "Peak flow measurement",
            "Reassure patient"
          ],
          "medications": {
            "bronchodilators": "salbutamol_5mg_nebulized_every_20_minutes",
            "steroids": "prednisolone_40mg_oral_immediately"
          },
          "monitoring": {
            "duration": "1-2_hours",
            "parameters": ["peak_flow", "symptoms", "oxygen_saturation"]
          },
          "discharge_criteria": [
            "peak_flow_>75%_predicted",
            "stable_on_room_air",
            "adequate_inhaler_technique",
            "written_asthma_action_plan"
          ]
        },
        "moderate": {
          "immediate_actions": [
            "Oxygen to maintain SpO2 94-98%",
            "Continuous monitoring",
            "IV access if poor response"
          ],
          "medications": {
            "bronchodilators": "salbutamol_5mg_plus_ipratropium_0.5mg_nebulized",
            "steroids": "prednisolone_40mg_oral_or_hydrocortisone_100mg_iv"
          },
          "monitoring": {
            "duration": "2-4_hours",
            "frequency": "every_30_minutes",
            "parameters": [
              "peak_flow",
              "respiratory_rate",
              "heart_rate",
              "oxygen_saturation"
            ]
          },
          "escalation_criteria": [
            "peak_flow_<50%_after_1_hour",
            "deteriorating_symptoms",
            "rising_pCO2"
          ]
        },
        "severe": {
          "immediate_actions": [
            "High flow oxygen",
            "Senior medical review",
            "Consider arterial blood gas",
            "IV access mandatory"
          ],
          "medications": {
            "bronchodilators": "continuous_nebulization_or_back_to_back",
            "steroids": "hydrocortisone_100mg_iv_6_hourly",
            "magnesium": "magnesium_sulfate_2g_iv_over_20_minutes",
            "consider": "aminophylline_if_not_responding"
          },
          "monitoring": {
            "location": "high_dependency_unit",
            "frequency": "continuous",
            "parameters": [
              "arterial_blood_gas",
              "ecg",
              "peak_flow",
              "vital_signs"
            ]
          },
          "icu_criteria": [
            "exhaustion",
            "altered_consciousness",
            "hypercapnia",
            "need_for_ventilation"
          ]
        }
      }
    },
    "monitoring": {
      "response_assessment": {
        "good_response": "peak_flow_>75%_improving_symptoms",
        "partial_response": "peak_flow_50-75%_some_improvement",
        "poor_response": "peak_flow_<50%_worsening_symptoms"
      },
      "red_flags": [
        "silent_chest",
        "cyanosis",
        "bradycardia",
        "exhaustion",
        "confusion",
        "peak_flow_<33%"
      ]
    },
    "follow_up": {
      "discharge_requirements": [
        "stable_on_discharge_medications",
        "peak_flow_>75%",
        "inhaler_technique_checked",
        "written_action_plan_provided",
        "follow_up_arranged"
      ],
      "outpatient_review": {
        "timing": "within_2_working_days",
        "provider": "gp_or_asthma_nurse",
        "consider_referral": "respiratory_specialist"
      }
    }
  },
  "adult_copd_exacerbation_management": {
    "name": "Adult COPD Exacerbation Management Protocol",
    "version": "1.0",
    "last_updated": "2024-07-15",
    "source": "Based on GOLD Guidelines, NICE Guidelines, and clinical best practice",
    "conditions": ["copd_exacerbation"],
    "decision_tree": {
      "initial_assessment": {
        "history": [
          "Baseline exercise tolerance and recent changes",
          "Sputum color and volume changes",
          "Current COPD medications",
          "Home oxygen use",
          "Previous admissions and NIV use",
          "Smoking status"
        ],
        "physical_examination": [
          "Respiratory rate and pattern",
          "Use of accessory muscles",
          "Pursed lip breathing",
          "Cyanosis and peripheral edema",
          "Temperature and signs of infection",
          "Mental status"
        ],
        "investigations": [
          "Arterial blood gas if severe",
          "Chest X-ray",
          "ECG if cardiovascular concerns",
          "Blood tests including inflammatory markers"
        ],
        "severity_assessment": {
          "mild": {
            "management": "increase_bronchodilators",
            "disposition": "home_management",
            "follow_up": "routine"
          },
          "moderate": {
            "management": "bronchodilators_steroids_antibiotics",
            "disposition": "home_or_short_observation",
            "follow_up": "48-72_hours"
          },
          "severe": {
            "management": "hospital_admission_full_treatment",
            "disposition": "admit",
            "follow_up": "inpatient"
          }
        }
      },
      "treatment_algorithm": {
        "mild": {
          "immediate_actions": [
            "Increase frequency of short-acting bronchodilators",
            "Review inhaler technique",
            "Ensure adequate hydration"
          ],
          "medications": {
            "bronchodilators": "increase_salbutamol_frequency",
            "steroids": "consider_if_not_improving"
          },
          "monitoring": "self_monitoring_with_action_plan",
          "safety_netting": "clear_escalation_plan"
        },
        "moderate": {
          "immediate_actions": [
            "Controlled oxygen therapy 88-92%",
            "Check ABG if SpO2 <92%",
            "Assess for signs of respiratory failure"
          ],
          "medications": {
            "bronchodilators": "salbutamol_5mg_ipratropium_0.5mg_nebulized",
            "steroids": "prednisolone_30mg_daily_for_5_days",
            "antibiotics": "amoxicillin_500mg_tds_if_purulent_sputum"
          },
          "monitoring": {
            "parameters": [
              "oxygen_saturation",
              "respiratory_rate",
              "arterial_blood_gas"
            ],
            "frequency": "every_2-4_hours"
          },
          "discharge_criteria": [
            "stable_on_room_air_or_usual_oxygen",
            "able_to_manage_at_home",
            "adequate_social_support"
          ]
        },
        "severe": {
          "immediate_actions": [
            "Controlled oxygen to maintain SpO2 88-92%",
            "Urgent ABG",
            "Senior review",
            "Consider NIV if pH <7.35"
          ],
          "medications": {
            "bronchodilators": "regular_nebulizers_every_4-6_hours",
            "steroids": "prednisolone_30mg_or_hydrocortisone_iv",
            "antibiotics": "amoxicillin_or_doxycycline_or_co_amoxiclav",
            "oxygen": "controlled_to_target_88-92%"
          },
          "niv_criteria": {
            "indications": [
              "ph_less_than_7.35",
              "pCO2_greater_than_6.5",
              "respiratory_acidosis"
            ],
            "contraindications": [
              "facial_trauma",
              "vomiting",
              "reduced_consciousness",
              "pneumothorax"
            ]
          },
          "monitoring": {
            "location": "respiratory_ward_or_hdu",
            "frequency": "continuous_monitoring",
            "parameters": ["abg", "respiratory_rate", "consciousness_level"]
          }
        }
      }
    },
    "monitoring": {
      "treatment_response": {
        "improving": "reduced_dyspnea_improved_abg",
        "static": "no_change_reassess_treatment",
        "deteriorating": "consider_icu_mechanical_ventilation"
      },
      "complications": [
        "hypercapnic_respiratory_failure",
        "pneumothorax",
        "pulmonary_embolism",
        "cardiac_arrhythmias"
      ]
    },
    "follow_up": {
      "discharge_planning": [
        "smoking_cessation_advice",
        "inhaler_technique_review",
        "pulmonary_rehabilitation_referral",
        "vaccination_status_check",
        "oxygen_assessment_if_indicated"
      ],
      "outpatient_review": {
        "timing": "within_2_weeks",
        "provider": "respiratory_team_or_copd_nurse",
        "optimization": "review_maintenance_therapy"
      }
    }
  },
  "pneumonia_management": {
    "name": "Community-Acquired Pneumonia Management Protocol",
    "version": "1.0",
    "last_updated": "2024-07-15",
    "source": "Based on BTS Guidelines, IDSA/ATS Guidelines, and NICE Guidelines",
    "conditions": ["pneumonia"],
    "decision_tree": {
      "initial_assessment": {
        "history": [
          "Duration and progression of symptoms",
          "Presence of productive cough and sputum characteristics",
          "Fever pattern and associated symptoms",
          "Functional status and impact on daily activities",
          "Risk factors (smoking, chronic disease, immunosuppression)",
          "Recent travel or exposure history"
        ],
        "physical_examination": [
          "Vital signs including respiratory rate and oxygen saturation",
          "Chest examination for consolidation signs",
          "Assessment of hydration status",
          "Mental status assessment",
          "Signs of complications (empyema, abscess)"
        ],
        "severity_assessment": {
          "mild": {
            "management": "outpatient_antibiotics",
            "disposition": "home",
            "follow_up": "48-72_hours"
          },
          "moderate": {
            "management": "inpatient_antibiotics",
            "disposition": "admit_to_ward",
            "follow_up": "daily_review"
          },
          "severe": {
            "management": "intensive_antibiotics_supportive_care",
            "disposition": "ICU_consideration",
            "follow_up": "intensive_monitoring"
          }
        }
      },
      "treatment_algorithm": {
        "mild": {
          "immediate_actions": [
            "CURB-65 score calculation",
            "Chest X-ray if indicated",
            "Pulse oximetry",
            "Consider blood tests if systemically unwell"
          ],
          "antibiotic_choice": [
            "First-line: amoxicillin 500mg-1g TDS for 5-7 days",
            "Penicillin allergy: clarithromycin 500mg BD for 5-7 days",
            "Atypical cover: doxycycline 100mg BD for 7-10 days"
          ],
          "supportive_care": [
            "Adequate hydration",
            "Rest and symptom monitoring",
            "Paracetamol for fever and pain",
            "Safety netting advice"
          ]
        },
        "moderate": {
          "immediate_actions": [
            "Chest X-ray",
            "Blood tests (FBC, U&E, CRP, blood cultures)",
            "Arterial blood gas if hypoxic",
            "Sputum culture if productive"
          ],
          "antibiotic_choice": [
            "First-line: amoxicillin 500mg-1g TDS + clarithromycin 500mg BD",
            "Alternative: co-amoxiclav 625mg TDS + clarithromycin 500mg BD",
            "Severe penicillin allergy: levofloxacin 500mg daily"
          ],
          "supportive_care": [
            "Oxygen therapy if SpO2 <94%",
            "IV fluids if dehydrated",
            "VTE prophylaxis",
            "Chest physiotherapy if indicated"
          ]
        },
        "severe": {
          "immediate_actions": [
            "Urgent chest X-ray",
            "Arterial blood gas",
            "Blood cultures before antibiotics",
            "Urine pneumococcal antigen",
            "ICU referral if criteria met"
          ],
          "antibiotic_choice": [
            "First-line: co-amoxiclav 1.2g TDS IV + clarithromycin 500mg BD",
            "Alternative: ceftriaxone 2g daily IV + clarithromycin 500mg BD",
            "Severe sepsis: add vancomycin if MRSA risk"
          ],
          "supportive_care": [
            "High-flow oxygen or NIV if required",
            "IV fluids and electrolyte balance",
            "Vasopressor support if shocked",
            "Mechanical ventilation if respiratory failure"
          ]
        }
      }
    },
    "monitoring": {
      "clinical_parameters": [
        "Temperature and fever response",
        "Respiratory rate and oxygen saturation",
        "Blood pressure and heart rate",
        "Urine output and renal function",
        "Mental status and confusion"
      ],
      "laboratory_monitoring": [
        "Serial CRP levels",
        "White cell count",
        "Renal function",
        "Liver function if on antibiotics"
      ],
      "imaging_follow_up": [
        "Repeat chest X-ray if not improving at 48-72 hours",
        "CT chest if complications suspected",
        "Post-treatment chest X-ray at 6 weeks if >50 years"
      ]
    },
    "follow_up": {
      "discharge_planning": [
        "Complete antibiotic course",
        "Smoking cessation advice",
        "Pneumococcal vaccination if indicated",
        "Return if deteriorating"
      ],
      "outpatient_review": {
        "timing": "within_48_hours_if_outpatient",
        "provider": "primary_care_or_respiratory_team",
        "optimization": "symptom_resolution_assessment"
      }
    }
  },
  "pediatric_gastroenteritis_management": {
    "name": "Pediatric Gastroenteritis Management Protocol",
    "version": "1.0",
    "last_updated": "2024-07-15",
    "source": "Based on NICE Guidelines, AAP Guidelines, and WHO/UNICEF Guidelines",
    "conditions": ["pediatric_gastroenteritis"],
    "decision_tree": {
      "initial_assessment": {
        "history": [
          "Duration and frequency of diarrhea and vomiting",
          "Fluid intake and tolerance",
          "Urine output and wet nappies",
          "Feeding history and changes",
          "Recent travel or food exposure",
          "Contacts with similar illness"
        ],
        "physical_examination": [
          "Weight loss percentage calculation",
          "Hydration status assessment",
          "Vital signs and perfusion",
          "Abdominal examination",
          "Neurological status",
          "Skin turgor and mucous membranes"
        ],
        "severity_assessment": {
          "mild": {
            "management": "oral_rehydration_home",
            "disposition": "home",
            "follow_up": "safety_netting_advice"
          },
          "moderate": {
            "management": "supervised_oral_rehydration",
            "disposition": "observation_unit",
            "follow_up": "reassess_in_4_hours"
          },
          "severe": {
            "management": "intravenous_fluids",
            "disposition": "hospital_admission",
            "follow_up": "hourly_monitoring"
          }
        }
      },
      "treatment_algorithm": {
        "mild": {
          "immediate_actions": [
            "Assess dehydration percentage",
            "Check for red flag symptoms",
            "Review feeding history",
            "Provide parent education"
          ],
          "rehydration_plan": [
            "Continue breastfeeding if applicable",
            "Offer small frequent amounts of ORS",
            "Give 5-10ml every 5-10 minutes initially",
            "Increase volume as tolerated"
          ],
          "dietary_management": [
            "Continue normal diet as tolerated",
            "Avoid fruit juices and carbonated drinks",
            "BRAT diet not recommended",
            "Lactose-free milk if lactose intolerant"
          ]
        },
        "moderate": {
          "immediate_actions": [
            "Calculate fluid deficit",
            "Start structured oral rehydration",
            "Consider anti-emetic if vomiting",
            "Monitor response to treatment"
          ],
          "rehydration_plan": [
            "ORS 50ml/kg over 4 hours",
            "Plus maintenance fluids",
            "Replace ongoing losses",
            "Consider nasogastric tube if not tolerating oral"
          ],
          "medications": [
            "Ondansetron 0.15mg/kg if persistent vomiting",
            "Probiotics may be beneficial",
            "Avoid anti-diarrheal medications",
            "Zinc supplementation in developing countries"
          ]
        },
        "severe": {
          "immediate_actions": [
            "Urgent IV access",
            "Fluid resuscitation if shocked",
            "Blood tests (U&E, glucose, blood gas)",
            "Consider septic screen if systemically unwell"
          ],
          "rehydration_plan": [
            "IV fluid resuscitation: 20ml/kg bolus if shocked",
            "Replace deficit over 24-48 hours",
            "Maintenance fluids plus ongoing losses",
            "Switch to oral when able to tolerate"
          ],
          "monitoring": [
            "Hourly vital signs and fluid balance",
            "Neurological observations",
            "Urine output monitoring",
            "Electrolyte monitoring"
          ]
        }
      }
    },
    "monitoring": {
      "clinical_parameters": [
        "Hydration status and weight",
        "Vital signs and perfusion",
        "Neurological status",
        "Urine output and frequency",
        "Tolerance of oral intake"
      ],
      "laboratory_monitoring": [
        "Electrolytes (Na, K, Cl, bicarbonate)",
        "Renal function (urea, creatinine)",
        "Blood glucose",
        "Stool culture if bloody or systemically unwell"
      ],
      "red_flags": [
        "Signs of severe dehydration",
        "Altered mental status",
        "Bloody diarrhea",
        "High fever >39Â°C",
        "Abdominal distension or severe pain"
      ]
    },
    "follow_up": {
      "discharge_planning": [
        "Ensure adequate hydration before discharge",
        "Provide clear instructions for home management",
        "Emphasize importance of hand hygiene",
        "Gradual return to normal diet"
      ],
      "outpatient_review": {
        "timing": "within_24_hours_if_concerns",
        "provider": "primary_care_or_pediatric_team",
        "optimization": "hydration_status_assessment"
      }
    }
  }
}
